@model Tedusop.web.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/Layouts.cshtml";
}

@section footerJs{
    <script src="/Assets/Client/js/jquery.wmuSlider.js"></script>
    <script>
        $('.example1').wmuSlider();
    </script>
}
<div class="shoes-grid">
    <a href="single.html">
        <div class="wrap-in">
            <div class="wmuSlider example1 slide-grid">
                <div class="wmuSliderWrapper">
                    @foreach (var slide in Model.SlideDefalse)
                    {
                        <article style="position: absolute; width: 100%; opacity: 0;">
                            <div class="banner-matter">
                                <div class="col-md-5 banner-bag">
                                    <img class="img-responsive " src=@slide.Image alt=" " />
                                </div>
                                <div class="col-md-7 banner-off">
                                    @Html.Raw(slide.Content)
                                </div>

                                <div class="clearfix"> </div>
                            </div>

                        </article>
                    }



                </div>
    </a>
    <ul class="wmuSliderPagination">
        @for (int i = 0; i < Model.SlideDefalse.Count(); i++)
        {
            <li><a href="#" class="">0</a></li>
        }

    </ul>

</div>
